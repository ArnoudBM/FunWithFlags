@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Fun with Flags - TBBT.jpg" alt="TBBT" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Fun with Flags - Amy.jpg" alt="Amy" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Fun with Flags - History.jpg" alt="History" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Fun with Flags - Penny.jpg" alt="Peny" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Fun with Flags - Kripke.jpg" alt="Peny" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/Fun with Flags - Will Wheaton.jpg" alt="Peny" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Cast</h2>
        <ul>
            <li><a>Dr Cooper</a></li>
            <li><a>Dr Fowler</a></li>
            <li><a>Will Wheaton</a></li>
            <li><a>LeVar Burton</a></li>
            <li><a>Penny</a></li>
            <li><a>Dr Kripke</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Themes</h2>
        <ul>
            <li><a>Meaning of flags</a></li>
            <li><a>History</a></li>
            <li><a>Types of flags</a></li>
            <li><a>Colors</a></li>
            <li><a>Rules</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Countries</h2>
        <ul>
            <li><a>North America</a></li>
            <li><a>South America</a></li>
            <li><a>Europe</a></li>
            <li><a>Africa</a></li>
            <li><a>Asia</a></li>
            <li><a>Australia</a></li>
            <li><a>Antarctica</a></li>
        </ul>
    </div>
    @if (Model.ShoutOutFeature.FeatureEnabled)
    {
        <div class="col-md-3" onclick="$('#mom').toggle();">
            <h2 class="animate">Hi Mom!</h2>
            <img id="mom" src="images/Mary Cooper.jpg" style="display: none" />
        </div>
    }
</div>
